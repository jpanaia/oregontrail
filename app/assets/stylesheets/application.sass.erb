@import "bootstrap-sprockets"
@import "bootstrap"

$font-stack: 'Ubuntu', sans-serif
$primary-color: #006289

///////* General */////////

body
  font-family: $font-stack
  font-size: 16px
  background-image: url('<%= "pattern2.png" %>')

h1
  font-size: 3.5em
  text-transform: uppercase
  color: $primary-color
  font-family: 'Maiden Orange', cursive

h2
  color: $primary-color
  text-transform: uppercase
  font-size: 1.6em
  font-weight: 700
  margin-top: 0

h1 + p
  font-size: 18px
  font-weight: bold

a
  color: $primary-color
  &:link, &:active, &:visited
    color: $primary-color
  &:hover
    border-bottom: 2px solid #fff
    padding-bottom: 5px
    text-decoration: none

.btn
  text-transform: uppercase

.btn-primary
  border-radius: 0
  border: 2px solid $primary-color
  background: none
  color: $primary-color
  &:hover
    border: 2px solid #fff
    background: none
    color: $primary-color
    padding-bottom: 10px

a.btn-primary:hover
  text-decoration: none

.container
  padding-top: 25px
  padding-bottom: 10px   
  
.cant-see-me
  display: none

///////* Header */////////

header
  text-align: center
  background: #fff
  padding: 20px 0 10px
  h1
    margin-bottom: -5px
    margin-top: 0

.fa-twitter, .fa-facebook
  font-size: 20px

///////* Footer */////////

///////* Navbar */////////

.navbar
  margin-bottom: 0
  border-bottom: 2px solid $primary-color
  border-top: 2px solid $primary-color
  padding-bottom: 17px
  padding-top: 17px
  font-weight: 700
  border-radius: 0
  text-transform: uppercase
  background-image: url('<%= asset_path "pattern1.png" %>')

.navbar-default .navbar-nav > li > a
  color: $primary-color
  font-size: 16px
  display: inline
  &:hover, &:focus
    background: none
    color: $primary-color
    opacity: .9

.navbar-nav > li
  padding: 0 50px

.navbar .nav
  width: 100%
  text-align: center
  > li
    float: none
    text-align: center
    display: inline

///////* Maps */////////

#map-canvas
  width: 100%
  height: 200px
  margin-bottom: 20px

#map-all
  width: 100%
  height: 400px
  margin-bottom: 20px
  border: 2px solid #0080AF

///////* Homepage */////////

.col-md-4 .well
  background-color: #70c9e7
  border: 2px solid #0080af
  border-radius: 0
  h2
    margin-top: 20px
  p
    letter-spacing: 2px
    color: #0081af
    margin-bottom: 25px
  h3
    color: #fff
    text-transform: uppercase
    font-size: 12px
    letter-spacing: 1px
    margin-top: 0
  h4
    color: #fff
    font-size: 12px
    text-transform: uppercase
    font-weight: 700
    letter-spacing: 1px
    margin-top: 0
    margin-bottom: 0

///////* Blog Post Show */////////

#blog-post-show
  background: #fff
  margin-top: 25px
  padding-top: 25px
  .col-sm-8, .col-sm-4
    padding: 10px 30px 30px
  h2
    margin-top: 20px
  h3
    text-transform: uppercase
    font-size: 12px
    letter-spacing: 1px
    margin: 18px 0
    color: #666
  h4
    font-weight: bold
    font-size: 14px
    color: #999
    margin-top: 0
  #blog-content
    color: #8A8A8A
    p
      margin-bottom: 25px

#comments-form
  background: none
  h3
    text-transform: uppercase
    font-size: 12px
    letter-spacing: 1px
    margin: 18px 0
    color: #666

.byline
  h3
  border: 1px solid #ccc
  padding: 10px
  margin: 0 0 25px!important
  display: inline-block
  img
    margin: -11px 8px -10px -10px

///////* Forms */////////

input[type="file"]
  border-radius: 0

.input-group 
  .form-control
    border-left: none
    font-size: 1em
    border: 2px solid $primary-color
    border-left: none
    border-radius: 0
    box-shadow: none
    background: #efefef
    &:focus
      border: 2px solid $primary-color
      border-radius: 0
      border-left: none
      background: #fff
  .input-group-addon
    border-radius: 0
    color: $primary-color
    border: 2px solid $primary-color
    border-right: none
