@import "bootstrap-sprockets"
@import "bootstrap"

$font-stack: 'Ubuntu', sans-serif
$primary-color: #006289
$light-blue: rgb(48, 157, 194)
$grey: #8A8A8A
$dark-grey: #333

///////* General */////////
html 
  position: relative
  min-height: 100%

body
  font-family: $font-stack
  font-size: 16px
  background-image: url('<%= "pattern2.png" %>')
  margin-bottom: 104px
  padding-bottom: 25px
  color: $dark-grey
h1
  font-size: 3.5em
  text-transform: uppercase
  color: $primary-color
  font-family: 'Maiden Orange', cursive

h2
  color: $primary-color
  text-transform: uppercase
  font-size: 1.6em
  font-weight: 700
  margin-top: 0

h1 + p
  font-size: 18px
  font-weight: bold

a
  color: $primary-color
  &:link, &:active, &:visited
    color: $primary-color
  &:hover
    border-bottom: 2px solid #fff
    padding-bottom: 5px
    text-decoration: none

.btn
  text-transform: uppercase

.btn-primary
  border-radius: 0
  border: 2px solid $primary-color
  background: none
  color: $primary-color
  &:hover
    border: 2px solid #fff
    background: none
    color: $primary-color
    padding-bottom: 10px

a.btn-primary:hover
  text-decoration: none

.container
  padding-top: 25px
  padding-bottom: 10px   
  
.cant-see-me
  display: none

///////* Header */////////

header
  text-align: center
  background: #fff
  padding: 20px 0 10px
  h1
    margin-bottom: -5px
    margin-top: 0

.fa-twitter, .fa-facebook
  font-size: 20px

///////* Navbar */////////

.navbar, footer
  margin-bottom: 0
  border-bottom: 2px solid $primary-color
  border-top: 2px solid $primary-color
  padding-bottom: 17px
  padding-top: 17px
  font-weight: 700
  border-radius: 0
  text-transform: uppercase
  background-image: url('<%= asset_path "pattern1.png" %>')

.navbar-default .navbar-nav > li > a
  color: $primary-color
  font-size: 16px
  display: inline
  &:hover, &:focus
    background: none
    color: $primary-color
    opacity: .9
    border-bottom: none

.navbar-nav > li
  padding: 0 50px

.navbar .nav
  width: 100%
  text-align: center
  > li
    float: none
    text-align: center
    display: inline

///////* Footer */////////

footer 
  border-bottom: none
  border-right: none
  border-left: none
  padding: 40px 0
  position: absolute
  bottom: 0
  width: 100%
  height: 104px
  color: #666

///////* Maps */////////

#map-canvas
  width: 100%
  height: 200px
  margin-bottom: 20px

#map-all
  width: 100%
  height: 400px
  margin-bottom: 20px
  border: 2px solid #0080AF

///////* Homepage */////////

.col-md-4 .well
  background-color: #70c9e7
  border: 2px solid #0080af
  border-radius: 0
  h2
    margin-top: 20px
  p
    letter-spacing: 2px
    color: #0081af
    margin-bottom: 25px
  h3
    color: #fff
    text-transform: uppercase
    font-size: 12px
    letter-spacing: 1px
    margin-top: 0
  h4
    color: #fff
    font-size: 12px
    text-transform: uppercase
    font-weight: 700
    letter-spacing: 1px
    margin-top: 0
    margin-bottom: 0

///////* Blog Post Show */////////

#blog-post-show
  background: #fff
  margin-top: 25px
  padding-top: 20px
  color: $grey
  .col-sm-8, .col-sm-4
    padding: 10px 25px 20px
  h2
    margin-top: 20px
  h3
    text-transform: uppercase
    font-size: 12px
    letter-spacing: 1px
    margin: 18px 0
    color: #666
  h4
    font-weight: bold
    font-size: 14px
    color: #999
    margin-top: 0
  #blog-content
    p
      margin-bottom: 25px
  a:hover
    color: $light-blue
  .col-sm-8
    .col-sm-6
      a 
        color: $light-blue
        font-size: 0.9em
        text-transform: uppercase
      a:hover 
        color: $primary-color
    .col-sm-6:last-child
      text-align: right


#comments-form
  background: none
  h3
    text-transform: uppercase
    font-size: 12px
    letter-spacing: 1px
    margin: 18px 0
    color: #666
  textarea
    border-radius: 0
    border: 0
    padding: 20px
    font-size: 1em

.byline
  h3
  border: 1px solid #ccc
  padding: 10px
  margin: 0 0 25px!important
  display: inline-block
  img
    margin: -10px 8px -10px -10px

#comments-show
  background: #fff
  padding: 20px
  margin-bottom: 20px // for small view
  h2
    margin:  0
    text-transform: capitalize
  h3
    text-transform: uppercase
    font-size: 12px
    letter-spacing: 1px
    margin: 18px 0
    color: #666
  h4
    font-weight: bold
    font-size: 14px
    color: #999
    margin-top: 0
  img 
    // border-radius: 100px
  hr:last-child
    display: none

///////* Forms */////////

input[type="file"]
  border-radius: 0

.input-group 
  .form-control
    border-left: none
    font-size: 1em
    border: 2px solid $primary-color
    border-left: none
    border-radius: 0
    box-shadow: none
    background: #efefef
    &:focus
      border: 2px solid $primary-color
      border-radius: 0
      border-left: none
      background: #fff
  .input-group-addon
    border-radius: 0
    color: $primary-color
    border: 2px solid $primary-color
    border-right: none

///////* Errors */////////

.alert 
  border-radius: 0
  margin-bottom: 0

#error_explanation 
  width: 400px
  border: 2px solid red
  padding: 7px
  padding-bottom: 12px
  margin-bottom: 20px
  background-color: #f0f0f0
  h2 
    text-align: left
    font-weight: bold
    padding: 5px 5px 5px 15px
    font-size: 12px
    //margin: -7px
    color: #c00
  p 
    margin-bottom: 0
    padding: 5px
  ul li 
    list-style: square