<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Sign up &amp; join the convo</h2>
<!--       <h3>a.k.a hang with the cool kids</h3>
 -->       <p>Benefits of signing up? Real-time chat with sassy girls on the road. If you're lucky one of the pups will respond!</p>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

       <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">
          <span class="glyphicon glyphicon-user"></span>
          </div>
          <%= f.text_field :username, class: "form-control input-lg", placeholder: "Username", hide_label: true, required: "required" %>

         </div> 
      </div>
      
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">
          <span class="glyphicon glyphicon-envelope"></span>
          </div>
          <%= f.email_field :email, hide_label: true, class: "form-control input-lg", placeholder: "Email", required: "required" %>
         </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-lock"></span>
          </div>
          <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", hide_label: true, placeholder: "Password", required: "required" %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-lock"></span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", hide_label: true, placeholder: "Password Confirmation", required: "required" %>
        </div>
      </div>

      <div class="form-group">
        <label>Upload Profile Pic (optional)</label>
        <%= f.file_field :avatar, hide_label: true %>
      </div>

      <div><%= f.submit "Onward!", class: "btn btn-primary btn-lg" %>
      </div>

      <hr/>
        <p>Already signed up? &nbsp; <%= link_to "Sign In", user_session_path, style: "display:inline"%></p>
    <% end %>

    <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>