<%= javascript_tag do %>
   latitude = '<%= j @blog_post.latitude.to_s %>';
   longitude = '<%= j @blog_post.longitude.to_s %>';
   address = '<%= j @blog_post.address %>';
   blog_entry = '<%= j @blog_post.blog_entry %>';
<% end %>

<div class="container" id="blog-post-show">
  <div class="row">
		<div class="col-sm-8">
			<p class="pull-right">
				<% if can? :update, @blog_post %>
					<%= link_to edit_blog_post_path(@blog_post), class: "btn btn-default" do %>
			      <span class="glyphicon glyphicon-pencil"></span> 
			    <% end %>
				<% end %>
			</p>
			<h4><%= @blog_post.address %></h4>
		  <h2><%= @blog_post.title %></h2>
			<h3><%= @blog_post.created_at.strftime('%B %e, %Y %I:%M%P %Z') %></h3>
			<h3 class="byline">
				<%= image_tag @blog_post.user.avatar.url(:tiny) if @blog_post.user.avatar.exists? %><%= @blog_post.user.username %> 
			</h3>
		  <div id="blog-content">
		  	<%= @blog_post.blog_entry.html_safe %>
		  </div>
		  <%= link_to "Previous Post", blog_post_path(id: @blog_post.id) %>
		  <%= link_to "Next Post", blog_post_path(id: @blog_post.id.next) %>			
		</div>
		<div class="col-sm-4">
		  <div id="map-canvas"></div>
		  <% if @blog_post.photo.exists? %>
			  <%= image_tag @blog_post.photo.url(:large), class: "img-responsive" %><p class="photo-caption" %>Coming soon...</p>
			<% end %>
	  </div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h2>Comments</h2>
			<div id="comments-show">
			<% if @blog_post.comments.count != 0 %>
			  <% @blog_post.comments.order(created_at: :desc).each do |comment| %>
			  	<h3><%= comment.created_at.strftime('%B %e, %Y %I:%M%P %Z') %></h3>
			    <h3 class="byline">
			    	<%= image_tag comment.user.avatar.url(:tiny) if comment.user.avatar.exists? %>
			    	<%= comment.user.username %> says:</h3>
			    <p><%= comment.comment_entry %></p>
			    <hr/>
			  <% end %>
			<% else %>
				<p>No comments yet. Be the first!</p>
			<% end %>
		</div>
		</div>
		<div class="col-md-6" id ="comments-form">
		<% if user_signed_in? %>
			  <h2>Leave a comment</h2>
			  <%= render 'comments/form' %>
			<% else %>
			  <p><%= link_to "Sign in to leave a comment", new_user_session_path, class: "btn btn-primary btn-lg" %></p>
			<% end %>
		</div>
	</div>
</div>
